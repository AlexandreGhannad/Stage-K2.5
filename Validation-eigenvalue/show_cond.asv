function show_cond(cond, limits)

    figure()
    semilogy(cond, "k.")
    xlabel("Iteration")
    ylabel("Conditionnement")
    title("Evolution of the conditionnement")

    figure()
    tmp = max(abs(limits)) ./ min(abs(limits));
    semilogy(tmp, "LineWidth" , 3)
    hold on
%     semilogy(cond, "k.")
    xlabel("Iteration")
    ylabel("Conditionnement")
    title("Evolution of the conditionnement")
%     legend("Bounds on the conditionnement", "Conditionnement")



end